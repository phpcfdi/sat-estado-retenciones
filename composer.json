{
    "name": "phpcfdi/sat-estado-retenciones",
    "description": "Consulta el estado de un CFDI de Retenciones haciendo scrap del sitio del SAT",
    "license": "MIT",
    "keywords": [
        "sat",
        "cfdi",
        "retenciones",
        "mexico"
    ],
    "authors": [
        {
            "name": "Carlos C Soto",
            "email": "eclipxe13@gmail.com",
            "homepage": "https://www.phpcfdi.com/"
        }
    ],
    "homepage": "https://github.com/phpcfdi/sat-estado-retenciones",
    "support": {
        "issues": "https://github.com/phpcfdi/sat-estado-retenciones/issues",
        "source": "https://github.com/phpcfdi/sat-estado-retenciones"
    },
    "require": {
        "php": ">=8.2",
        "ext-dom": "*",
        "ext-json": "*",
        "symfony/css-selector": "^7.0",
        "symfony/dom-crawler": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.4"
    },
    "autoload": {
        "psr-4": {
            "PhpCfdi\\SatEstadoRetenciones\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpCfdi\\SatEstadoRetenciones\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "dev:build": [
            "@dev:fix-style",
            "@dev:test"
        ],
        "dev:check-style": [
            "@php tools/composer-normalize normalize --dry-run",
            "@php tools/php-cs-fixer fix --dry-run --verbose",
            "@php tools/phpcs --colors -sp"
        ],
        "dev:coverage": [
            "@php -dzend_extension=xdebug.so -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html build/coverage/html/"
        ],
        "dev:fix-style": [
            "@php tools/composer-normalize normalize",
            "@php tools/php-cs-fixer fix --verbose",
            "@php tools/phpcbf --colors -sp || true"
        ],
        "dev:test": [
            "@dev:check-style",
            "@php vendor/bin/phpunit --testdox --stop-on-failure",
            "@php tools/phpstan analyse"
        ]
    },
    "scripts-descriptions": {
        "dev:build": "DEV: run dev:fix-style and dev:tests, run before pull request",
        "dev:check-style": "DEV: search for code style errors using composer-normalize, php-cs-fixer and phpcs",
        "dev:coverage": "DEV: run phpunit with xdebug and storage coverage in build/coverage/html/",
        "dev:fix-style": "DEV: fix code style errors using composer-normalize, php-cs-fixer and phpcbf",
        "dev:test": "DEV: run dev:check-style, phpunit and phpstan"
    }
}
